<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/furina_instruction"
        android:contentDescription="Informatif Icon"/>

    <TextView
        android:id="@+id/dialogNotification_txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Message Here!"
        android:textStyle="bold"
        android:textSize="15sp"/>
    <Button
        android:id="@+id/dialogNotification_btnUnderstand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Understand!"/>

</LinearLayout>